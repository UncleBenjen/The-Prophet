<div class="chapter-section" style="position: relative; " >
    <div class="background-pattern" style="position: fixed; z-index: 1; top:0; left: 0;">
	     <div class="chapter-section-header">
	          <h2>{{ title }}</h2>
	          <span>{{{ prelude }}}</span>
	     </div>
    </div>

    <div class="container chapter-content" style=" box-shadow: 0 -12px 15px 0 rgba(0,0,0,0.24), 0 -17px 50px 0 rgba(0,0,0,0.19);">
   	
	   	<p class="chapter-text">{{{ text }}}</p>
	    
	    <div class="row space-between" style="margin-bottom: 32px; flex-wrap: wrap;">

	    {{#if prevChapter}}
			<a href="{{ prevChapter.url }}" class="btn left"><i class="material-icons">navigate_before</i>{{ prevChapter.title }}</a>
		{{/if}}
			<span class="flex-space"></span>
	    {{#if nextChapter}}
			<a href="{{ nextChapter.url }}" class="btn right">{{ nextChapter.title }}<i class="material-icons">navigate_next</i></a>
		{{/if}}
	    	
	    	
	    </div>
    	<br/>
    </div>
   

    {{> footer}}

</div>